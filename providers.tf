/*
SUMMARY:      Azure Provider Configuration for SummitLMS
DESCRIPTION:  Terraform provider configuration for Azure Resource Manager with required features
AUTHOR:       Cloud Solutions Architect
VERSION:      1.0.0
*/

terraform {
  required_version = ">= 1.0"

  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~> 3.80"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.5"
    }
  }
}

provider "azurerm" {
  features {
    key_vault {
      purge_soft_delete_on_destroy    = true
      recover_soft_deleted_key_vaults = true
    }
    resource_group {
      prevent_deletion_if_contains_resources = false
    }
  }
}
